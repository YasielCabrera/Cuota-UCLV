{
  "manifest_version": 2,
  "name": "Cuota UCLV",
  "short_name": "Cuota UCLV",
  "description": "Consulta del estado de la cuota de navegaci√≥n de la UCLV",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/img/icon_max.png",
    "128": "assets/img/icon_max.png"
  },

  "browser_action": {
    "default_title": "Cuota UCLV",
    "default_icon": "assets/img/icon_max.png",
    "default_popup": "index.html"
  },

  "background": {
    "scripts": ["assets/js/jquery.min.js", "assets/js/definitions.js", "assets/js/background.js"]
  },

  "permissions": [
    "background",
    "http://api.uclv.edu.cu/*",
    "storage",
    "tabs",
    "proxy",
    "notifications"
  ],
  
  "options_page": "options.html"
}
